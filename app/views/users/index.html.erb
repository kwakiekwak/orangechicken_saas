<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <h1>Dev Match Community</h1>
    <p>Welcome to the Dev Match Community, Users must fill out a profile in order to be visible in the community.</p>
    <ul class="list-unstyled">
      <% @users.each do |loser| %> <!-- x is users -->
        <% if loser.profile %>
          <li>
           <div class="well row <%= cycle('white-bg', '') %>">
            <div class="col-md-4 text-center">
             <%= link_to loser do %>
              <%= loser.id %>
              <%= image_tag loser.profile.avatar.url(:thumb), class: 'user-index-avatar' %>
             <% end %>
            </div>
            
            <div>
             <%= link_to loser do %>
              <h2><%= loser.profile.first_name %> <%= loser.profile.last_name %></h2>
             <% end %>
              <p>
                  <%= loser.profile.job_title %> 
                  <% if loser.plan_id == 2 %>
                   <span class="label label-danger">PRO</span></p>
                  <% end %>
            </div>
            
           </div>
          </li>
        <% end %>
      <% end %>
    </ul>
  </div>
</div>
